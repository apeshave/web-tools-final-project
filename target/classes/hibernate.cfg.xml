<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/project</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.default_schema">project</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<mapping class="com.healthcare.pojo.Address" />
		<mapping class="com.healthcare.pojo.Person" />
		<mapping class="com.healthcare.pojo.UserAccount" />
		<mapping class="com.healthcare.pojo.Request"/>
		<mapping class="com.healthcare.pojo.Product"/>
		<mapping class="com.healthcare.pojo.ProcessedRequest"/>
		<mapping class="com.healthcare.pojo.InventoryItem"/> 
		<mapping class="com.healthcare.pojo.Doctor"/> 
		<mapping class="com.healthcare.pojo.Nurse"/> 
		<mapping class="com.healthcare.pojo.Manufacturer"/> 
		<mapping class="com.healthcare.pojo.Hospital"/> 
		<mapping class="com.healthcare.pojo.HospitalInventoryItem"/> 
		<mapping class="com.healthcare.pojo.ReturnInventory"/> 
		<mapping class="com.healthcare.pojo.Verification"/> 
	</session-factory>
</hibernate-configuration>
